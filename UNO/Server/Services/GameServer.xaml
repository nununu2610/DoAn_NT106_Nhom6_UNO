<Window x:Class="UNO.Server.Services.GameServer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UNO.Server.Services"
        mc:Ignorable="d"
        Title="GameServer" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/START.png"/>
        </Grid.Background>
        <Button x:Name="buttonStart" Content="" Background="Transparent" BorderBrush="Transparent" Foreground="Transparent" Opacity="0" HorizontalAlignment="Left" Height="80" Margin="80,199,0,0" VerticalAlignment="Top" Width="250" Click="buttonStart_Click"/>
        <Button x:Name="buttonStop" Content="" Background="Transparent" BorderBrush="Transparent" Foreground="Transparent" Opacity="0" HorizontalAlignment="Left" Height="80" Margin="470,199,0,0" VerticalAlignment="Top" Width="265" Click="buttonStop_Click"/>
        <Button x:Name="buttonPlay" Content="" Background="Transparent" BorderBrush="Transparent" Foreground="Transparent" Opacity="0" HorizontalAlignment="Center" Height="105" Margin="0,284,0,0" VerticalAlignment="Top" Width="200" Click="buttonPlay_Click"/>

    </Grid>
</Window>
