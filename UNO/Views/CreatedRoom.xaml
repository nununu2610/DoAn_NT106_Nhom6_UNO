<Window x:Class="UNO.Views.CreatedRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Created Room" Height="450" Width="800">

    <Window.Background>
        <ImageBrush ImageSource="/Images/Create room (3).png"/>
    </Window.Background>

    <Grid>
        <TextBlock x:Name="txtIP1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="400,80,0,0" FontSize="20"/>
        <TextBlock x:Name="txtMode" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="400,120,0,0" FontSize="20"/>

        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="40" Margin="400,149,0,0" VerticalAlignment="Top" Width="340" FontSize="24" SelectionTextBrush="#FFEAEAEA"/>

        <ComboBox x:Name="cbbCount" HorizontalAlignment="Left" Height="40" Margin="400,244,0,0" VerticalAlignment="Top" Width="230" FontSize="20" BorderBrush="White">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="#FFF0F0F0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
            <ComboBoxItem Content="2 Players" />
            <ComboBoxItem Content="3 Players" />
            <ComboBoxItem Content="4 Players" />
        </ComboBox>

        <Button x:Name="btnCreateRoom" BorderBrush="Transparent" Foreground="Transparent" Background="Transparent" Opacity="0" Content="Button" HorizontalAlignment="Left" Height="50" Margin="570,334,0,0" VerticalAlignment="Top" Width="145" Click="btnCreateRoom_Click"/>
    </Grid>
</Window>
